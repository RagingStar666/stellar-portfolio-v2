</footer>

<script is:inline>
  function goBackToTop(event) {
    event.preventDefault()
    window.scrollTo({
        top: 0,
        behavior: "smooth"
    })
  }

  function inintializeBackToTop() {
    const backToTop = document.getElementById("back-to-top")
    backToTop?.addEventListener("click", goBackToTop)
  }

  document.addEventListener("astro:after-swap", inintializeBackToTop)
  inintializeBackToTop()
</script>

<style>
  .bg-midnight-blue {
    background-color: #0d1b2a;
  }
  
  .pulsating-orb {
    width: 8px;
    height: 8px;
    background-color: #d8936a;
    border-radius: 50%;
    display: inline-block;
    animation: pulse 2s infinite;
    box-shadow: 0 0 0 0 rgba(216, 147, 106, 0.7);
  }
  
  @keyframes pulse {
    0% {
      transform: scale(0.95);
      box-shadow: 0 0 0 0 rgba(216, 147, 106, 0.7);
    }
    
    70% {
      transform: scale(1.1);
      box-shadow: 0 0 0 6px rgba(216, 147, 106, 0);
    }
    
    100% {
      transform: scale(0.95);
      box-shadow: 0 0 0 0 rgba(216, 147, 106, 0);
    }
  }
  
  html.dark .pulsating-orb {
    background-color: #3be9d1;
    box-shadow: 0 0 0 0 rgba(59, 233, 209, 0.7);
    animation: pulse-dark 2s infinite;
  }
  
  @keyframes pulse-dark {
    0% {
      transform: scale(0.95);
      box-shadow: 0 0 0 0 rgba(59, 233, 209, 0.7);
    }
    
    70% {
      transform: scale(1.1);
      box-shadow: 0 0 0 6px rgba(59, 233, 209, 0);
    }
    
    100% {
      transform: scale(0.95);
      box-shadow: 0 0 0 0 rgba(59, 233, 209, 0);
    }
  }
</style>