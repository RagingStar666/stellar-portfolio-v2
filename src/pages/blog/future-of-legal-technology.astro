---
import PageLayout from "@layouts/PageLayout.astro";
import Breadcrumbs from "@components/Breadcrumbs.astro";

const links = [
  { name: "Home", url: "/" },
  { name: "Blog", url: "/blog" },
  { name: "The Future of Legal Technology", url: "/blog/future-of-legal-technology" }
];

const post = {
  title: "The Future of Legal Technology",
  date: "Mar 20, 2025",
  author: "Prodipta Roy",
  excerpt: "Examining how AI and machine learning are transforming the legal profession and creating new opportunities for legal professionals and technologists alike.",
  readingTime: "8 min read",
  tags: ["Legal Tech", "AI", "Legal Innovation", "Future of Law"]
};
---

<PageLayout title={post.title} description={post.excerpt}>
  <div class="container mx-auto px-6 py-12">
    <div class="max-w-4xl mx-auto">
      <Breadcrumbs links={links} />
      
      <article class="glass-effect rounded-lg p-8 mt-6">
        <header class="mb-8">
          <h1 class="text-3xl font-bold text-black dark:text-white mb-4">{post.title}</h1>
          
          <div class="flex flex-wrap items-center text-black/60 dark:text-white/60 text-sm gap-4 mb-6">
            <div class="flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
