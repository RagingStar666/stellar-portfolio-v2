---
import { getCollection } from "astro:content"
import PageLayout from "@layouts/PageLayout.astro"
import { BLOG } from "@consts"
import Breadcrumbs from "@components/Breadcrumbs.astro"

// Type definition for blog posts
type BlogPost = {
  slug: string;
  data: {
    title: string;
    date: Date;
    summary: string;
    tags: string[];
    draft?: boolean;
    readingTime?: string;
  };
};

// Get all blog posts
const posts = (await getCollection("blog") as unknown as BlogPost[])
  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime());

// Categories for sidebar
const categories = [
  { name: "Constitutional Law", count: 2 },
  { name: "IP Law", count: 3 },
  { name: "Legal Tech", count: 4 },
  { name: "Comparative Law", count: 1 },
  { name: "Privacy Law", count: 2 },
  { name: "Digital Rights", count: 3 },
  { name: "Legal Systems", count: 2 }
];

const links = [
  { name: "Home", url: "/" },
  { name: "Blog", url: "/blog" }
];
---

<PageLayout title={BLOG.TITLE} description={BLOG.DESCRIPTION}>
  <div class="container mx-auto px-6 py-12">
    <div class="max-w-5xl mx-auto">
      <Breadcrumbs links={links} />
      
      <div class="flex flex-col lg:flex-row gap-8 mt-6">
        <!-- Main Content -->
        <div class="lg:w-3/4">
          <div class="glass-effect rounded-lg p-8 mb-8">
            <h1 class="text-3xl font-bold text-black dark:text-white mb-4">Blog & Articles</h1>
            <p class="text-black/80 dark:text-white/80">
              Exploring the intersections of law, technology, and policy with a focus on intellectual property, 
              constitutional developments, and the future of legal practice.
            </p>
          </div>
          
          <!-- Blog Posts -->
          <div class="space-y-8">
            {posts.map(post => (
              <article class="glass-effect rounded-lg overflow-hidden shadow-sm hover:shadow-md transition-all duration-300 card-hover-effect">
                <a href={`/blog/${post.slug}`} class="block">
                  <div class="md:flex">
                    <div class="md:w-1/3 aspect-video">
                      <img src="/placeholder-image.svg" alt={post.data.title} class="w-full h-full object-cover" />
                    </div>
                    <div class="p-6 md:w-2/3">
                      <div class="flex items-center text-sm text-black/60 dark:text-white/60 mb-2">
                        <span>{new Date(post.data.date).toLocaleDateString('en-US', {
                          year: 'numeric',
                          month: 'long',
                          day: 'numeric'
                        })}</span>
                        <span class="mx-2">•</span>
                        <span>{post.data.readingTime || "5 min read"}</span>
                      </div>
                      
                      <h2 class="text-xl font-semibold text-black dark:text-white mb-2">{post.data.title}</h2>
                      <p class="text-black/80 dark:text-white/80 mb-4 line-clamp-2">{post.data.summary}</p>
                      
                      <div class="flex flex-wrap gap-2 mb-3">
                        {post.data.tags.slice(0, 3).map(tag => (
                          <span class="px-2 py-0.5 bg-black/5 dark:bg-[#3be9d1]/10 rounded-full text-xs text-black/70 dark:text-[#3be9d1]/90">
                            {tag}
                          </span>
                        ))}
                        {post.data.tags.length > 3 && (
                          <span class="px-2 py-0.5 bg-black/5 dark:bg-white/5 rounded-full text-xs text-black/70 dark:text-white/70">
                            +{post.data.tags.length - 3} more
                          </span>
                        )}
                      </div>
                      
                      <div class="flex items-center text-sm">
                        <span class="text-black/80 dark:text-[#3be9d1] hover:underline">Read article →</span>
                      </div>
                    </div>
                  </div>
                </a>
              </article>
            ))}
          </div>
          
          <!-- Pagination -->
          <div class="flex justify-center mt-12">
            <div class="flex space-x-1">
              <button disabled class="px-3 py-1 rounded bg-black/5 dark:bg-white/5 text-black/40 dark:text-white/40">
                Previous
              </button>
              <button class="px-3 py-1 rounded bg-black/10 dark:bg-[#3be9d1]/20 text-black dark:text-[#3be9d1]">
                1
              </button>
              <button class="px-3 py-1 rounded hover:bg-black/5 hover:dark:bg-white/10 text-black/70 dark:text-white/70">
                2
              </button>
              <button class="px-3 py-1 rounded hover:bg-black/5 hover:dark:bg-white/10 text-black/70 dark:text-white/70">
                Next
              </button>
            </div>
          </div>
        </div>
        
        <!-- Sidebar -->
        <div class="lg:w-1/4">
          <!-- Categories -->
          <div class="glass-effect rounded-lg p-6 mb-8">
            <h3 class="text-lg font-semibold text-black dark:text-white mb-4 border-b border-black/10 dark:border-white/10 pb-2">
              Categories
            </h3>
            <ul class="space-y-2">
              {categories.map(category => (
                <li>
                  <a href={`/blog/category/${category.name.toLowerCase().replace(/\s+/g, '-')}`} class="flex justify-between items-center text-black/80 dark:text-white/80 hover:text-black hover:dark:text-[#3be9d1] transition-colors">
                    <span>{category.name}</span>
                    <span class="px-2 py-0.5 bg-black/5 dark:bg-[#3be9d1]/10 rounded-full text-xs text-black/70 dark:text-[#3be9d1]/90">
                      {category.count}
                    </span>
                  </a>
                </li>
              ))}
            </ul>
          </div>
          
          <!-- About the Author -->
          <div class="glass-effect rounded-lg p-6">
            <h3 class="text-lg font-semibold text-black dark:text-white mb-4 border-b border-black/10 dark:border-white/10 pb-2">
              About the Author
            </h3>
            <div class="flex flex-col items-center">
              <div class="w-24 h-24 rounded-full overflow-hidden mb-4">
                <img src="/placeholder-image.svg" alt="Prodipta Roy" class="w-full h-full object-cover" />
              </div>
              <h4 class="text-base font-medium text-black dark:text-white mb-2">Prodipta Roy</h4>
              <p class="text-black/70 dark:text-white/70 text-sm text-center mb-4">
                Law student at University of Calcutta with interests in IP Rights, ADR, and legal technology.
              </p>
              <a href="/about" class="text-sm text-black/80 dark:text-[#3be9d1] hover:underline">
                Learn more →
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</PageLayout>

<style>
.card-hover-effect {
  transition: all 0.3s ease;
}
.card-hover-effect:hover {
  transform: translateY(-5px);
}
</style>

<script>
// Mobile toggle functionality
document.addEventListener('DOMContentLoaded', () => {
  const toggleButton = document.getElementById('toggle-sidebar');
  const sidebar = document.querySelector('.lg\\:col-span-1');
  
  toggleButton?.addEventListener('click', () => {
    if (sidebar) {
      if (sidebar.classList.contains('lg:col-span-1')) {
        // Only hide on mobile, lg:hidden keeps it visible on desktop
        sidebar.classList.toggle('hidden');
      }
    }
  });
});
</script>


