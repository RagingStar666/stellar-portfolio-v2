---
import PageLayout from "@layouts/PageLayout.astro";
import Breadcrumbs from "@components/Breadcrumbs.astro";

const links = [
  { name: "Home", url: "/" },
  { name: "Legal", url: "/legal" },
  { name: "Terms of Service", url: "/legal/terms" }
];
---

